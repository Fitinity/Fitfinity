<% layout('layouts/boilerplate') %>
  <h1>
    <%= greeting %>
  </h1>
  <div>
    <button class="btn btn-success mb-3"><a href="/journals/new" style="text-decoration: none; color: inherit;">Add New
        Entry</a></button>
  </div>
  <ul>
    <% for (let journal of journals) { %>
      <!-- <a href="/journals/<%= journal._id %>"> -->
      <a href="/gyms">
        <div class="card text-bg-dark mb-3" style="height: 30vh; transition: transform 0.3s ease;"
          onmouseover="this.style.transform = 'scale(1.05)';" onmouseout="this.style.transform = 'scale(1)';">
          <img src="<%= journal.images[0].url %>" class="card-img mb-5" alt="<%= journal.images[0].filename %>"
            style="object-fit: cover; width: 100%; height: 100%;">
          <div class="card-img-overlay">
            <h5 class="card-title">
              <%= journal.title %>
            </h5>
            <p class="card-text">
              <%= journal.content %>
            </p>
            <p class="card-text"><small>Last updated 3 mins ago</small></p>
          </div>
        </div>
      </a>
      <% } %>
  </ul>
  </body>

  </html>